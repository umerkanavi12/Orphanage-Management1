<% layout('/layout/boilerplate') %>
<link rel="stylesheet" href="/uploadimage.css">

<style>
   
   /* Three columns side by side */
.column {
  float: left;
  margin-bottom: 16px;
  padding: 0 8px;
  margin: 0 auto;

}

.card {
  width: 33.3%;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  margin: 5% auto;
  border-radius: 30px;
  border: 2px solid rgb(0, 255, 255);
}

/* Some left and right padding inside the container */
.container {
  max-width: 100%;
  padding: 0 16px;
}

/* Clear floats */
.container::after, .row::after {
  content: "";
  clear: both;
  display: table;
}

.title {
  color: grey;
}

.button {
  border: none;
  outline: 0;
  display: inline-block;
  padding: 8px;
  color: white;
  text-align: center;
  cursor: pointer;
  width: 100%;
}

.button:hover {
  background-color: #555;
}
h2{
    text-transform: uppercase;
}
img{
    padding: 5%;
    border-radius: 10% 10% 2% 2%;
}
p{
    color: #000;
}
#cardinfo{
    padding: 6%;
    padding-bottom: 0px;
    }
    @media screen and (max-width: 650px) {
  .card {
    width: 95%;
    display: block;
    /* margin: 5%; */
  }
}

</style>
<body>

<div class="col-md-6 col-md-offset-3 text-center fh5co-heading animate-box">
    <h1>Volunteer</h1>
</div>
            <!-- <div class="column"> -->
              <% for (let patient of data.requirements) { %>
              <div class="card">
                <div class="container" id="cardinfo">
                    <h2>Item: <%= patient.item %></h2>
                    <h4 style="display: inline;">Category:</h4> <p style="display: inline;" class="pclass"><%= patient.category %></p>
                    <h4>Orphanage Name: <%= patient.name %></h4>
                    <h4>Orphanage Address: <%= patient.address %></h4>
                    <h4>Orphanage Email: <%= patient.email %></h4>
                </div>
              </div>
        </div>
        <% } %>



            <!-- </div> -->
<!-- <script src="/uploadimage.js"></script> -->
            
</body>

